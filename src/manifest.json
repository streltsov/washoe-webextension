{
  "manifest_version": 2,
  "name": "Washoe",
  "version": "2.0.0",
  "applications": {
    "gecko": {
      "id": "washoe@streltsov.com"
    }
  },

  "browser_action": {
    "default_title": "Washoe",
    "browser_style": true,
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "matches": [ "<all_urls>" ],
    "js": [ "content_scripts.js" ]
  }],

  "background": {
    "scripts": [
      "background.js",
      "checkWordsLoop.js"
    ]
  },

  "permissions": [ "storage" ]
}
